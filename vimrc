syntax enable

set background=dark
let g:solarized_termcolors=256
let g:solarized_termtrans=1
colorscheme solarized

set incsearch
set hlsearch
nnoremap <leader><space> :nohlsearch<CR>

set tabstop=4
set softtabstop=4 
set expandtab
set shiftwidth=4

set number
set showcmd
set cursorline

filetype indent on
set lazyredraw
set showmatch

inoremap jk <esc>
